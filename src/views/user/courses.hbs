

<div class="container p-5">
    <div class="row">
        {{#each Asignatura}}
        <div class="col-md-4 offset-md">
            <div class="card" class="animated flipInY">
                <div class="card-header bg-dark text-white text-center">
                    <h3>{{Nombre}}</h3>
                </div>
                <div class="card-body">
                    <form action="/courses/{{idAsignatura}}" method="get">
                        <div class="form-group">
                            Profesor: <a href="">{{Profesor}}</a>
                        </div>
                        <div class="form-group">
                            <output class="form-control" name="" id="" cols="30" rows="10"
                                placeholder="Message" readonly>Aula virtual correspondiente a la asignatura {{Nombre}}</output>
                        </div>
                        <div class="form-group">
                            <button class="btn btn-primary btn-block">
                                Ir al curso
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
{{/each}}

    </div>


</div>
