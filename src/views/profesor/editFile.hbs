<div class="container p-5">
            <div class="row">
                <div class="col-md-5 offset-md-4">
                    <div class="card" class="animated flipInY">
                        <div class="card-header bg-dark text-white text-center">
                            <h3>Subir Fichero</h3>
                        </div>
                        <div class="card-body">
                            <form action="/teacher/edit/{{File.idFiles}}" id="alta" method="POST" enctype="multipart/form-data">
                                <div class="form-group">
                                    Nombre del Fichero: 
                                    <input type="text"  name="Nombre" required="true" value="{{File.Nombre}}">
                                </div>
                                <div class="form-group">
                                    <input type="file"  name="myFile" required="true" value="{{File.uploadPath}}">
                                </div>
                                <div class="form-group">
                                    <button class="btn btn-primary btn-block" type="submit">
                                        Subir
                                    </button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>


        </div>