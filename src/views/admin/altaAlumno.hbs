<div class="container p-5">
    <div class="row">
        <div class="col-md-5 offset-md-4">
            <div class="card" class="animated flipInY">
                <div class="card-header bg-dark text-white text-center">
                    <h3>Registrar Alumno</h3>
                </div>
                <div class="card-body">
                    <form action="/administration/addAlumno" id="alta" method="POST">
                        <div class="form-group">
                            <input type="text" class="form-control" placeholder="Nombre" name="Nombre" required="true">
                        </div>
                        <div class="form-group">
                            <input type="text" class="form-control" placeholder="Apellidos" name="Apellidos"
                                required="true">
                        </div>
                        <div class="form-group">
                            <input type="text" class="form-control" placeholder="DNI" name="DNI" required="true">
                        </div>
                        <div class="form-group">
                            <input type="text" class="form-control" placeholder="Dirección" name="Direccion"
                                required="true">
                        </div>

                        <div class="form-group">
                            <input type="number" class="form-control" placeholder="Teléfono" name="Telefono"
                                required="true">
                        </div>
                        <div class="form-group">
                            <input type="email" class="form-control" placeholder="Email" name="Correo" required="true">
                        </div>
                        
                            <select class="form-select" id="asignatura" name="Asignatura" multiple="multiple" required="true">
                                {{#each Asignatura}}
                                <option value="{{idAsignatura}}">{{Nombre}}</option>
                                {{/each}}
                            </select>
                        
                        <div class="form-group">
                            <button class="submit">
                                Enviar
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>