<div class="container p-5">
            <div class="row">
                <div class="col-md-5 offset-md-4">
                    <div class="card" class="animated flipInY">
                        <div class="card-header bg-dark text-white text-center">
                            <h3>Editar Alumno</h3>
                        </div>
                        <div class="card-body">
                            <form action="" id="alta" method="POST" >
                                <div class="form-group">
                                    <input type="text" value="{{Alumno.Nombre}}" class="form-control" placeholder="Nombre" name="Nombre" required="true">
                                </div>
                                <div class="form-group">
                                    <input type="text" value="{{Alumno.Apellidos}}"class="form-control" placeholder="Apellidos" name="Apellidos" required="true">
                                </div>
                               <div class="form-group">
                                    <input type="text" value="{{Alumno.DNI}}" class="form-control" placeholder="DNI" name="DNI" required="true">
                                </div>
                                <div class="form-group">
                                    <input type="text" value="{{Alumno.Direccion}}" class="form-control" placeholder="Dirección" name="Direccion" required="true">
                                </div>
                               
                                <div class="form-group">
                                    <input type="number" value="{{Alumno.Telefono}}" class="form-control" placeholder="Teléfono" name="Telefono" required="true">
                                </div>
                                <div class="form-group">
                                    <input type="email" value="{{Alumno.Correo}}" class="form-control" placeholder="Email" name="Correo" required="true">
                                </div>
                                <div class="form-group">
                                    <button class="btn btn-primary btn-block">
                                        Enviar
                                    </button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>


        </div>
