<div class="container p-5">
    <div class="row">
        <div class="col-md-5 offset-md-4">
            <div class="card" class="animated flipInY">
                <div class="card-header bg-dark text-white text-center">
                    <h3>Registrar Horario</h3>
                </div>
                <div class="card-body">
                    <form action="/administration/altaHorario" id="alta" method="post">
                        Asignatura: <select class="form-select" name="idAsignatura" id="asignatura">
                            {{#each asignaturas}}
                            <option value="{{idAsignatura}}">{{Nombre}}</option>
                            {{/each}}
                        </select>
                        <div class="form-group ">
                            Día de la Semana: <select name="Dia" class="form-select">
                                <option value="1">Lunes</option>
                                <option value="2">Martes</option>
                                <option value="3">Miércoles</option>
                                <option value="4">Jueves</option>
                                <option value="5">Viernes</option>
                            </select>
                        </div>
                        <div class="form-group">
                            <input type="text" class="form-control" placeholder="Hora de Inicio" name="Hora_inicio"
                                required="true">
                        </div>
                        <div class="form-group">
                            <input type="text" class="form-control" placeholder="Hora de Fin" name="Hora_fin"
                                required="true">
                        </div>
                </div>
                <div class="form-group">
                    <button class="submit">
                        Enviar
                    </button>
                </div>
                </form>
            </div>
        </div>
    </div>
</div>